{
  "parser": "@typescript-eslint/parser",
  "extends": ["airbnb"],
  "rules": {
    "no-unused-vars": "off",
    "react/jsx-filename-extension": "off",
    "jsx-a11y/img-redundant-alt": "off",
    "react/jsx-one-expression-per-line": "off",
    "comma-dangle": "off",
    "import/prefer-default-export": "off",
    "no-extra-semi": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "overrides": [
    {
      "files": ["*.tsx"],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "no-undef": "off"
      }
    }
  ],
  "env": {
    "browser": true,
    "jest": true
  }
}
